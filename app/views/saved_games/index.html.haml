.row
  .span12
    %h1 Saved Games

    - if @saved_games.any?
      %table.table
        - @saved_games.each do |saved_game|
          %tr
            %td= link_to(saved_game.name, game_start_url(saved_game))
            %td= saved_game.created_at
    - else
      %p
        You have no saved games.

    %p
      = link_to("New Game", new_saved_game_url, class: "btn btn-success btn-large")

