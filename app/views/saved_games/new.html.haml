.row
  .span12
    %h1 Saved Games

    .form-horizontal
      = errors_for(@saved_game).html_safe

      = form_for(@saved_game) do |f|
        .control-group
          = f.label :name, class: "control-label"
          .controls
            = f.text_field :name

        .form-actions
          = f.submit("Play Now!", class: "btn btn-success")

